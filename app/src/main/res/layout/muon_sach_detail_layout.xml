<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bongbong">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Nguoi Muon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Sach"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loai Sach"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nha Xuat Ban"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So Sach Muon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngay Muon"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txt_Detail_NguoiMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Le Van A"/>
        <TextView
            android:id="@+id/txt_Detail_TenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conan"/>
        <TextView
            android:id="@+id/txt_Detail_LoaiSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truyen"/>
        <TextView
            android:id="@+id/txt_Detail_NXB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kim Dong"/>
        <TextView
            android:id="@+id/txt_Detail_SL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>
        <TextView
            android:id="@+id/txt_Detailngaymuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/4/2019"/>
    </LinearLayout>

</LinearLayout>